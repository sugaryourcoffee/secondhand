<%= render partial: 'shared/generic_error_message', locals: { topic: @line_item } if @line_item %>

<div class="row">
  <div class="span8">
    <%= form_tag line_items_path, class: "form-search" do %>
      <p>
        <%= label_tag :search_list_number, t('.select_list_number') %>
        <%= text_field_tag :search_list_number, params[:search_list_number], 
                           class: "input-medium search-query" %>
        <%= label_tag :search_item_number, t('.select_item_number') %>
        <%= text_field_tag :search_item_number, params[:search_item_number],
                           class: "input-medium search-query" %>
        <%= submit_tag t('.search'), name: nil, class: "btn" %>
      </p>
    <% end %>
    <p>
      <%= button_to t('.check_out'), 
                    sellings_path, 
                    method: :post, class: "btn btn-large btn-primary" %>
    </p>
  </div>
  <div class="span4">
    <div id="cart-status" class="well well-small">
      <%= render 'carts/cart_status' %>
    </div>
  </div>
</div>

