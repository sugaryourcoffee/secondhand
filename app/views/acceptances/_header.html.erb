<% if @event %>
  <div class="row">
    <div class="span4">
      <%= form_tag acceptances_path, method: 'get', class: "form-search" do %>
        <p>
          <%= label_tag :search_list_number, t('.select_list') %>
          <%= text_field_tag :search_list_number, params[:search_list_number], 
               class: "input-medium search-query search-acceptance-list-number",
               type: "number" %>
          <%= submit_tag t('.search'), name: nil, class: "btn" %>
        </p>
      <% end %>
    </div>
    <div class="span8">
      <div class="well well-small">
        <%= render 'acceptance_status' %>
      </div>
    </div>
  </div>
<% else %>
  <div class="center well">
    <%= t('missing_event_html', action: t('.action'), 
          link: link_to(t('.events'), events_path, 
                        id: 'activate_event', class: 'btn btn-small')) %>
  </div>
<% end %>

