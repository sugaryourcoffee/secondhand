<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('.item_number') %></th>
      <th><%= t('.description') %></th>
      <th><%= t('.size')        %></th>
      <th><%= t('.price')       %></th><th></th><th></th>
    </tr>
  </thead>
  <tbody>
    <% @list.items.each do |item| %>
      <tr>
        <% if edit and @item == item %>
          <td><%= item.item_number %></td>
          <td><%= f.text_field :description, size: 50 %></td>
          <td><%= f.text_field :size %></td>
          <td><%= f.text_field :price%></td>
          <td><%= f.submit t('.update'), class: "btn btn-link" %></td>
          <td><%= link_to t('.cancel'), 
                          acceptances_path(utf8: true, search_list: @list.list_number), 
                          remote: true %>
          </td>
        <% else %>
          <td><%= item.item_number %></td>
          <td><%= item.description %></td>
          <td><%= item.size        %></td>
          <td><%= item.price       %></td>
          <td><%= link_to t('.edit'), edit_item_acceptance_path(item), remote: true,
                          id: "edit-item-#{item.item_number}" %></td>
          <td><%= link_to t('.delete'), 
                          delete_item_acceptance_path(item),
                          method: :delete,
                          remote: true,
                          data: { confirm: t('.confirm') },
                          id: "delete-item-#{item.item_number}" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

