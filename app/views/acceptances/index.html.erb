<% provide(:title, t('.acceptance')) %>
<h1><%= t('.acceptance') %></h1>

<%= form_tag acceptances_path, method: 'get', class: "form-search" do %>
  <p>
    <%= label_tag :search_list, t('.select_list') %>
    <%= text_field_tag :search_list, params[:search_list], 
                       class: "input-medium search-query" %>
    <%= submit_tag t('.search'), name: nil, class: "btn" %>
  </p>
<% end %>

<% if @list and @list.registered? %>
  <article class="well well-small">
    <h2>List</h2>
    <div id="list-table">
      <%= render partial: 'show_list', locals: { edit: false } %>
    </div>
  </article>

  <article id="user" class="well well-small">
    <h2>Seller</h2>
    <header>
      <aside>
        <%= gravatar_for(@list.user) %>
      </aside>
      <hgroup>
        <h1><%= @list.user.first_name %> <%= @list.user.last_name %></h1>
      </hgroup>
    </header>
    <table>
      <tr><td><%= @list.user.street %></td></tr>
      <tr><td><%= @list.user.zip_code %> <%= @list.user.town %></td></tr>
      <tr><td><%= @list.user.phone %></td></tr>
      <tr><td><%= @list.user.email %></td></tr>
    </table>
  </article>

  <article id="items" class="well well-small">
    <h2>Items</h2>
    <div id="items-table">
      <%= render partial: 'show_item', locals: { edit: false } %>
    </div>
  </article>
  <% if @list.accepted_on.nil? %>
    <%= button_to "Accept List", accept_acceptance_path(@list), class: "btn btn-primary" %> 
  <% else %>
    <%= button_to "Release List", accept_acceptance_path(@list), class: "btn btn-warning" %>
  <% end %>
  <%= link_to "Cancel" %>
<% end %>

