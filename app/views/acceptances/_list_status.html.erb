<article>
  <header>
    <h5><%= t('.list_status') %></h5>
  </header>
  <section>
    <% if @list.accepted? %>
      <%= t('.accepted_status_html', button: button_to(t('.revoke_list'),
                                                       accept_acceptance_path(@list),
                                                       class: "btn btn-warning")) %>
    <% else %>
      <%= t('.not_accepted_status_html') %>
    <% end %>
    <%= link_to t('.cancel'), acceptances_path %>
  </section>
</article>

