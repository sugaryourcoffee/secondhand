<div class="row">
  <div class="span5">
    <%= form_tag receipts_path, method: 'get', class: "form-search" do %>
      <p>
        <%= label_tag :search_receipt_id, t('.select_receipt') %>
        <%= text_field_tag :search_receipt_id, params[:search_receipt_id], 
                           class: "input-medium search-query" %>
        <%= submit_tag t('.search'), name: nil, class: "btn" %>
      </p>
    <% end %>
  </div>
</div>
