<% provide(:title, "#{@user.last_name}, #{@user.first_name}") %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.first_name %> <%= @user.last_name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <fieldset>
      <legend>List Registration</legend>
      <%= form_tag(register_list_user_path(@user, params)) do %>
        <%= label_tag :registration_code, 'Enter registration code:' %>
        <%= text_field_tag :registration_code, params[:registration_code] %>
        <%= submit_tag "Register List", class: "btn btn-success" %>
      <% end %>
    </fieldset>
    <fieldset>
      <legend>List Administration</legend>
      <div class="row">
        <% if @user.lists.empty? %>
          <p>You have no registered lists yet</p>
        <% else %>
          <% @user.lists.each do |list| %>
          <div class="span2">
            <div class="btn-group">
              <%= link_to "<button class=\"btn\">
                             List #{list.list_number}
                           </button>".html_safe, 
                           user_list_items_path(@user, list) %>
              <button class="btn dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li class="nav-header">Process</li>
                <li><%= link_to "Item collection", 
                        user_list_items_path(@user, list) %></li>
                <li class="divider"/>
                <li><%= link_to "Delete list", 
                                list_path(list), 
                                method: :delete, 
                                confirm: "Are you sure?" %></li>
                <li class="divider"/>
                <li class="nav-header">Print</li>
                <li><%= link_to "List", 
                                print_list_user_list_path(@user, list) %></li>
                <li><%= link_to "Labels", 
                                print_labels_user_list_path(@user, list) %></li>
              </ul>
            </div>
          </div>
            <div class="span6">
            <%= form_for(list) do |f| %>
              <%= f.label :container, 'Enter container color:' %>
              <%= f.text_field :container %>
              <%= f.submit "Save Container Color", class: "btn btn-success" %>
            <% end %>
          </div>
          <% end %>
        <% end %>
      </div>
    </fieldset>
  </div>
</div>
