<h1>Listing events</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Event date</th>
    <th>Location</th>
    <th>Fee</th>
    <th>Deduction</th>
    <th>Provision</th>
    <th>Max lists</th>
    <th>Max items per list</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.event_date %></td>
    <td><%= event.location %></td>
    <td><%= event.fee %></td>
    <td><%= event.deduction %></td>
    <td><%= event.provision %></td>
    <td><%= event.max_lists %></td>
    <td><%= event.max_items_per_list %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

