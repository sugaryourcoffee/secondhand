<%= provide(:title, t('.All_events')) %>

<h1><%= t('.All_events') %></h1>

<%= will_paginate %>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('.Title') %></th>
      <th><%= t('.Date') %></th>
      <th><%= t('.Location') %></th>
      <th><%= t('.Fee') %></th>
      <th><%= t('.Deduction') %></th>
      <th><%= t('.Provision') %></th>
      <th><%= t('.Lists') %></th>
      <th><%= t('.Items') %></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.event_date.strftime("%Y-%m-%d") %></td>
        <td><%= event.location %></td>
        <td><%= event.fee %></td>
        <td><%= event.deduction %></td>
        <td><%= event.provision %></td>
        <td><%= event.max_lists %></td>
        <td><%= event.max_items_per_list %></td>
        <% if event.active %>
          <td><%= button_to t('.Deactivate'), activate_event_path(event),
            class: "btn btn-warning" %></td>
        <% else %>
          <td><%= button_to t('.Activate'), activate_event_path(event),
            class: "btn btn-success" %></td>
        <% end %>
        <td><%= link_to t('.Show'), event %></td>
        <td><%= link_to t('.Edit'), edit_event_path(event) %></td>
        <td><%= link_to t('.Destroy'), event, method: :delete, 
          data: { confirm: t('.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to t('.New_Event'), new_event_path %>

<%= will_paginate %>
