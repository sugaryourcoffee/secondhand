<h1>Listing events</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Location</th>
      <th>Fee</th>
      <th>Deduction</th>
      <th>Provision</th>
      <th>Lists</th>
      <th>Items</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.event_date.strftime("%Y-%m-%d") %></td>
        <td><%= event.location %></td>
        <td><%= event.fee %></td>
        <td><%= event.deduction %></td>
        <td><%= event.provision %></td>
        <td><%= event.max_lists %></td>
        <td><%= event.max_items_per_list %></td>
        <% if event.active %>
          <td><%= button_to 'Deactivate', activate_event_path(event),
            class: "btn btn-warning" %></td>
        <% else %>
          <td><%= button_to 'Activate', activate_event_path(event),
            class: "btn btn-success" %></td>
        <% end %>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, 
          data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

