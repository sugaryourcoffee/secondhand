<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "secondhand", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= selected_language %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% LANGUAGES.each do |language| %>
                <li><%= link_to language[0], root_path(language[1]) %></li>
              <% end %>
            </ul>
          </li>
          <li><%= link_to t('.Home'),    root_path %></li>
          <li><%= link_to t('.Help'),    help_path %></li>
          <% if signed_in? %>
            <% if current_user.admin? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= t('.Event') %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to t('.Acceptance'), acceptances_path %></li>
                  <li><%= link_to t('.Cart'), item_collection_carts_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to t('.Reversal'), 
                          line_item_collection_carts_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to t('.Counter'), counter_index_path %></li>
                </ul>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= t('.Admin') %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to t('.Events'), events_path %></li>
                  <li><%= link_to t('.Lists'), lists_path %></li>
                  <li><%= link_to t('.News'), news_index_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to t('.Users'), users_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to t('.Carts'), carts_path %></li>
                  <li><%= link_to t('.Sellings'), sellings_path %></li>
                  <li><%= link_to t('.Reversals'), reversals_path %></li>
                </ul>
              </li>
            <% end %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t('.Account') %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t('.Profile'), current_user %></li>
                <li>
                  <%= link_to t('.Settings'), edit_user_path(current_user) %>
                </li>
                <li class="divider"></li>
                <li>
                  <%= link_to t('.Sign_out'), signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t('.Sign_in'), signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>

