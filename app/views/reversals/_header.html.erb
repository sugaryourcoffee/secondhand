<div class="row">
  <div class="span5">
    <%= form_tag reversals_path, method: 'get', class: "form-search" do %>
      <p>
        <%= label_tag :search_reversal_id, t('.select_reversal') %>
        <%= text_field_tag :search_reversal_id, params[:search_reversal_id], 
                           class: "input-medium search-query" %>
        <%= submit_tag t('.search'), name: nil, class: "btn" %>
      </p>
    <% end %>
  </div>
  <div class="span7">
    <div id="reversal-status" class="well well-small">
      <%= render 'reversal_status' %>
    </div>
  </div>
</div>

