<div class="well well-small">
  <article>
    <header>
      <h5><%= t('.reversal_status') %></h5>
    </header>
    <section>
      <table>
        <tr>
          <td><%= t('.items') %></td>
          <td class="list_count"><%= @reversal.line_items.count %></td>
        </tr>
        <tr>
          <td><%= t('.updated') %></td>
          <td class="list_count">
            <%= t('.updated_at', 
                  updated_at: time_ago_in_words(@reversal.updated_at)) %>
          </td>
        </tr>
        <tr class="total_line">
          <td><%= t('.revenue') %></td>
          <td class="list_count"><%= @reversal.total %></td>
        </tr>
      </table>
    </section>
  </article>
</div>
