<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('.cart_number') %></th>
      <th><%= t('.cart_type') %></th>
      <th><%= t('.item_count') %></th>
      <th />
    </tr>
  </thead>
  <tbody>
  <% @carts.each do |cart| %>
    <tr>
      <td><%= cart.id %></td>
      <td><%= cart.cart_type %></td>
      <td><%= cart.line_items.count %></td>
      <td><%= link_to t('.show'), cart, id: "show_cart_#{cart.id}" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
